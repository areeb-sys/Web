extends layout

block content
  h1 My Shopping cart
  - var total=0
   table.table 
        thead 
            tr 
                th Name 
                th Price
                th Action
        tbody 
           each item in cart 
            - total += Number(item.price) 
            tr  
              td=item.name  
              td=item.price  
              td 
                //- a(href="/products/cart/remove/"  +item._id, <button type ="button" cl> delete </button>   )  Remove Item
                a(href="/products/cart/remove/"  +item._id, class="btn btn-danger btn-sm" )  Remove Item
        tfoot 
            tr 
              td Total 
              td= total
